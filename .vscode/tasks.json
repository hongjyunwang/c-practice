{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g", "${file}", "-o", "${fileBasenameNoExtension}.exe", "-fexec-charset=cp950"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}